<h1>Invites</h1>

<table>
  <thead>
    <tr>
      <th>Sender</th>
      <th>Reciever</th>
      <th>Accepted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="dynamic">
    <% @invites.each do |invite| %>
      <tr>
        <td><%= invite.sender %></td>
        <td><%= invite.reciever %></td>
        <td><%= invite.accepted %></td>
        <td><%= link_to 'Show', invite %></td>
        <td><%= link_to 'Edit', edit_invite_path(invite) %></td>
        <td><%= link_to 'Destroy', invite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

