	document.addEventListener('DOMContentLoaded', function () {
		dynamic = document.getElementById("dynamic")
		setInterval(function() {
			console.log("~refresh")
           // dynamic.load('/invites');
           window.location.reload(false);
       }, 10000);
	})
</script>