<h1>Chats</h1>

<% @invites = Invite.where(sender: current_user.email, accepted: true) %>
<% unless @invites.empty? %>

<table>
	<thead>
		<tr>
			<th>Username</th>
			<!-- <th>Reciever</th>
			<th>Accepted</th> -->
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody id="dynamic">
		<% @invites.each do |invite| %>
		<tr>
			<!-- <td><%= invite.sender %></td> -->
			<td><%= invite.reciever %></td>
			<!-- <td><%= invite.accepted %></td> -->
			<td>
				<%= form_for :invite, url: "/chats/chat?target_email=#{invite.reciever}", 
				:method => "get", :remote => false, :id => 'input_form' do |form|%>
				<div class="actions">
					<%= form.submit "go to chat"%>
				</div>
				<% end %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>

<% else %>
<p>empty</p>
<%end%>

